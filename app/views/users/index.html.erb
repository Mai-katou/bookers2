<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <%= render 'userinfo', user: @user %>
      <%= render 'books/newbook',book: @new_book %>
    </div>
    <div class="col-lg-8">
      <h1>Users</h1>
        <table class= "table table-striped">
            <thead>
              <tr>
                <th scope="col">image</th>
                <th scope="col">name</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                <td><%=image_tag user.get_profile_image("100x100") %></td>
                <td>name<%=user.name %></td>
                <td><%= link_to "Show", user_path(user.id) %></td>
                </tr>
              <% end %>
            </tbody>
      </table>
      <%= paginate @users %>
    </div>
  </div>
</div>