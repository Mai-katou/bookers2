<h1>User info</h1>
  <%= image_tag user.get_profile_image("100x100") %>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
          <td><%= user.name %></td>
      </tr>
      <tr>
        <th>introduction</th>
          <td><%= user.introduction %></td>
      </tr>
    </tbody>
  </table>
  <% if user.id == current_user.id %>
    <p><%= link_to edit_user_path(current_user.id), class:"btn btn-outline-secondary btn-block" do %><i class="fas fa-user-cog"></i><% end %></p>
  <% else %>
    <p><%= link_to edit_user_path(user.id), class:"btn btn-outline-secondary btn-block" do %><i class="fas fa-user-cog"></i><% end %></p>
  <% end %>