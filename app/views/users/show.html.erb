<% if notice %>
    <div class="success-messages"><%= notice %></div>
<% end %>

<div class="success-messages"><%= flash[:userupdated] %></div>

<div class="container">
    <div class="row">
        <div class="col-md-3">
        <%= render 'userinfo', user: @user %>
        <%= render 'books/newbook', book: @new_book %>
        </div>
       <div class="col-md-8 offset-md-1">
        <h1>Books</h1>
        <table class= "table">
        <thead>
          <tr>
            <th></th>
            <th scope="col">Title</th>
            <th scope="col">Opinion</th>
          </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
        <tr>
        <td><%= link_to user_path(@user.id) do %>
            <%= image_tag book.user.get_profile_image("100x100") %>
            <% end %></td>
        <td><%= link_to book_path(book.id) do %>
            <%= book.title %>
            <% end %></td>
        <td><%= book.body %></td>
        </tr>
        <% end %>
        </tbody>
        </table>
        <%= paginate @books %>
        </div>
    </div>
</div>