<div class="error-message">
<% if @new_book.errors.any? %>
  <% if @new_book.errors.count ==1 %>
    <%= @new_book.errors.count %> error prohibited this obj from being saved:
  <% else %>
    <%= @new_book.errors.count %> errors prohibited this obj from being saved:
  <% end %>
  <ul>
    <% @new_book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <%= render 'users/userinfo', user: @user %>
      <%= render 'newbook',book: @new_book %>
    </div>
    <div class="col-lg-8">
      <h1>Books</h1>
      <table class= "table table-striped">
        <thead>
          <tr>
            <th></th>
            <th scope="col">Title</th>
            <th scope="col">Opinion</th>
          </tr>
        </thead>
        <tbody>
           <% @books.each do |book| %>
          <tr>
          <th scope="row"><%= link_to user_path(book.user.id) do %>
          <%=image_tag book.user.get_profile_image("100x100") %>
          <% end %></th>
          <td><%= link_to book_path(book.id) do %>
          <%=book.title %>
          <% end %></td>
          <td><%=book.body %></td>
          <tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>