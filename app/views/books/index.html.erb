<h1>New book</h1>
<%= form_with model: @book, local:true do |f| %>

<%= f.label :Title %><br>
<%= f.text_field :title %><br>

<%= f.label :Opinion %><br>
<%= f.text_area :body %><br>

<%=f.submit 'Create Book' %>
<% end %>




<h1>Books</h1>
<% @books.each do |book| %>
<div>
    <p><%=image_tag 'sample-author1.jpg' %></p>
    <p><%= link_to book_path(book.id) do %>
    Title<%=book.title %>
    <% end %></p>
    <p>Opinion<%=book.body %></p>
</div>
<% end %>