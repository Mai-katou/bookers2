<%= flash[:bookupdated] %>
<%= flash[:bookcreated] %>

<%= render 'users/userinfo', user: @user %>
<%= render 'newbook',book: @new_book %>

<h1>Book detail</h1>
<div>
    <%= link_to user_path(@book.user.id) do %>
    <p><%=image_tag @book.user.get_profile_image("100x100") %></p>
    <% end %>
    <p><%=link_to @book.user.name,user_path(@book.user.id)  %></p>

    <p><%= link_to book_path(@book.id) do %>
        <%= @book.title %>
        <% end %></p>
    <p><%= @book.body %></p>
    <% if @book.user == current_user %>
        <%= link_to "Edit", edit_book_path(@book.id) %>
        <%= link_to "Destroy",book_path(@book.id), method: :delete,"data-confirm" => "本当に消しますか?" %>
    <% end %>
</div>

