<div class="success-messages"><%= flash[:bookupdated] %></div>
<div class="success-messages"><%= flash[:bookcreated] %></div>
<div class="container">
  <div class="row">
    <div class="col-md-3">
        <%= render 'users/userinfo', user: @user %>
        <%= render 'newbook',book: @new_book %>
    </div>
    <div class="col-md-8 offset-md-1">
        <h1>Book detail</h1>
            <table class= "table">
                <tbody>
                    <tr>
                    <th scope="row"><%= link_to user_path(@book.user.id) do %>
                        <%=image_tag @book.user.get_profile_image("100x100") %>
                        <% end %></br>
                        <%=link_to @book.user.name,user_path(@book.user.id)  %></th>
                    <td><%= link_to book_path(@book.id) do %>
                        <%= @book.title %>
                        <% end %></td>
                    <td><%= @book.body %></td>
                    <td><% if @book.user == current_user %>
                        <%= link_to "Edit", edit_book_path(@book.id) ,class:"btn btn-success" %>
                        <% end %></td>
                    <td><% if @book.user == current_user %>
                        <%= link_to "Destroy",book_path(@book.id), method: :delete, class:"btn btn-danger","data-confirm" => "本当に消しますか?" %>
                        <% end %></td>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
    </div>
</div>

